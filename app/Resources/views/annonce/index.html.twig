{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annonce list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Title</th>
                <th>Author</th>
                <th>Content</th>
                <th>Published</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td><a href="{{ path('annonce_show', { 'id': annonce.id }) }}">{{ annonce.id }}</a></td>
                <td>{% if annonce.date %}{{ annonce.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ annonce.title }}</td>
                <td>{{ annonce.author }}</td>
                <td>{{ annonce.content }}</td>
                <td>{% if annonce.published %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('annonce_show', { 'id': annonce.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('annonce_edit', { 'id': annonce.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annonce_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
